@model IEnumerable<Warehouse.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>            @Html.DisplayNameFor(model => model.Name)        </th>
        <th>            @Html.DisplayNameFor(model => model.Price)       </th>
        <th>            @Html.DisplayNameFor(model => model.Quantity)    </th>
        <th>            @Html.DisplayNameFor(model => model.Category)     </th>
        <th></th>
    </tr>

@foreach (var product in Model) {
    <tr>
        <td>@Html.DisplayFor(_ => product.Name)    </td>
        <td>@Html.DisplayFor(_ => product.Price)   </td>
        <td>@Html.DisplayFor(_ => product.Quantity)</td>
        <td>@Html.DisplayFor(_ => product.Category)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { product.Id }) |
            @Html.ActionLink("Details", "Details", new { product.Id }) |
            @Html.ActionLink("Delete", "Delete", new { product.Id })
        </td>
    </tr>
}

</table>

@if (!Model.Any()) {
    <p> Sorry, no hits. </p>
}